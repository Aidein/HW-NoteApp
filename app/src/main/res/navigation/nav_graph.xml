<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="uz.direction.noteapp.NoteFragment"
        android:label="NoteFragment"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_editingFragment"
            app:destination="@id/editingFragment" />
        <argument
            android:name="header"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Empty Header" />
        <argument
            android:name="text"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Empty Text" />
    </fragment>
    <fragment
        android:id="@+id/editingFragment"
        android:name="uz.direction.noteapp.EditingFragment"
        android:label="fragment_editing"
        tools:layout="@layout/fragment_editing" >
        <argument
            android:name="noteHeader"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Empty Header" />
        <argument
            android:name="noteText"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Empty Text" />
        <action
            android:id="@+id/action_editingFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>
</navigation>